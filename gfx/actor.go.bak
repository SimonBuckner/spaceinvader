package gfx

// Actor represents a specific Actor in a game
type Actor struct {
	Name  string
	Scene *Scene
	// Props   []*Prop
	Visible bool
	Scale   float32
	Pos     Vec3
	Speed   Vec3

	// StartEventHandler  func()
	// StopEventHandler   func()
	// UpdateEventHandler func(uint32)
}

// NewActor factory
func NewActor(name string) *Actor {
	return &Actor{
		Name: name,
		// Props:   make([]*Prop, 0),
		Visible: false,
		Scale:   1,
		Pos:     Vec3{},
		Speed:   Vec3{},
	}
}

// SetScale ..
func (a *Actor) SetScale(scale float32) {
	a.Scale = scale
}
